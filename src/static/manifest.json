{
    "manifest_version": 3,
    "name": "MobiOptions",
    "description": "A chrome extension for MobiOptions",
    "version": "1.0.0",
    "action" : {
        "default_popup": "popup.html",
        "default_title": "MobiOptions",
        "default_icon" : "icon.png"
    },
    "icons": {
        "16" : "icon.png",
        "48" : "icon.png",
        "128" : "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://play.google.com/store/*"],
            "js": ["contentScript.js"]
        }
    ]
}